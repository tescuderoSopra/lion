{
  "name": "@lion/helpers",
  "version": "0.5.4",
  "description": "Helpers that are used throughout lion and can be used outside",
  "license": "MIT",
  "author": "ing-bank",
  "homepage": "https://github.com/ing-bank/lion/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ing-bank/lion.git",
    "directory": "packages/helpers"
  },
  "main": "index.js",
  "module": "index.js",
  "files": [
    "*.js",
    "renderLitAsNode",
    "sb-action-logger",
    "sb-locale-switcher",
    "sortEachDepth"
